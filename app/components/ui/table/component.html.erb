<% if header_content.present? %>
  <div class="overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
    <%= header_content %>
    <div class="overflow-x-auto">
      <table class="<%= cx('w-full', extra_classes) %>">
        <thead class="<%= cx('relative bg-secondary', header_height) %>">
          <tr>
            <% columns.each do |col| %>
              <th class="relative p-0 px-6 py-2 outline-hidden text-left">
                <div class="flex items-center gap-1">
                  <span class="text-xs font-semibold whitespace-nowrap text-quaternary"><%= col.label %></span>
                  <% if col.sortable %>
                    <svg class="size-3 text-fg-quaternary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 15L12 18.75 15.75 15m-7.5-6L12 5.25 15.75 9"/>
                    </svg>
                  <% end %>
                </div>
              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <%= content %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <div class="overflow-x-auto">
    <table class="<%= cx('w-full', extra_classes) %>">
      <thead class="<%= cx('relative bg-secondary', header_height) %>">
        <tr>
          <% columns.each do |col| %>
            <th class="relative p-0 px-6 py-2 outline-hidden text-left">
              <div class="flex items-center gap-1">
                <span class="text-xs font-semibold whitespace-nowrap text-quaternary"><%= col.label %></span>
              </div>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= content %>
      </tbody>
    </table>
  </div>
<% end %>
