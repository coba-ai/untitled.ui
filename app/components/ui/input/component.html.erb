<div class="<%= cx('flex h-max w-full flex-col items-start justify-start gap-1.5', extra_classes) %>">
  <% if label.present? %>
    <%= render Ui::Label::Component.new(text: label, required: required) %>
  <% end %>

  <div class="<%= wrapper_classes %>">
    <% if icon.present? %>
      <span class="<%= icon_leading_classes %>"><%= icon.html_safe %></span>
    <% end %>

    <input
      type="<%= type %>"
      <% if name.present? %>name="<%= name %>"<% end %>
      <% if value.present? %>value="<%= value %>"<% end %>
      <% if placeholder.present? %>placeholder="<%= placeholder %>"<% end %>
      <% if disabled %>disabled<% end %>
      <% if required %>required<% end %>
      class="<%= input_classes %>"
    />

    <% if invalid %>
      <svg class="<%= icon_trailing_classes %>" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z"/>
      </svg>
    <% end %>
  </div>

  <% if hint.present? %>
    <%= render Ui::HintText::Component.new(invalid: invalid) { hint } %>
  <% end %>
</div>
