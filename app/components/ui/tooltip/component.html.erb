<div class="relative inline-block"
     data-controller="tooltip"
     data-tooltip-placement-value="<%= placement_data %>">
  <div data-tooltip-target="trigger"
       data-action="mouseenter->tooltip#show mouseleave->tooltip#hide focus->tooltip#show blur->tooltip#hide">
    <%= trigger %>
  </div>

  <div data-tooltip-target="content"
       class="pointer-events-none absolute hidden opacity-0 transition-opacity duration-150"
       role="tooltip">
    <div class="<%= tooltip_classes %>">
      <span class="text-xs font-semibold text-white"><%= title %></span>
      <% if description.present? %>
        <span class="text-xs font-medium text-tooltip-supporting-text"><%= description %></span>
      <% end %>
    </div>
  </div>
</div>
