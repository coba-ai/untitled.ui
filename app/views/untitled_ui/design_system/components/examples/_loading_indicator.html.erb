<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">type</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:line_simple</td><td class="px-6 py-3 text-tertiary">:line_simple, :line_spinner</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:md</td><td class="px-6 py-3 text-tertiary">:xs, :sm, :md, :lg</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">label</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Text label below spinner</td></tr>
    </tbody>
  </table>
</div>

<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Sizes</h2>
  </div>
  <div class="flex flex-wrap items-end gap-6 p-6">
    <% %i[xs sm md lg].each do |size| %>
      <%= render Ui::LoadingIndicator::Component.new(size: size, label: size.to_s.upcase) %>
    <% end %>
  </div>
</div>
