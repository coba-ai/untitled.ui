<%= render "untitled_ui/design_system/shared/example_section", title: "Types" do %>
  <div class="flex flex-wrap items-end gap-8">
    <div class="flex flex-col items-center gap-2">
      <%= render Ui::LoadingIndicator::Component.new(type: :line_simple) %>
      <span class="text-xs text-tertiary">line_simple</span>
    </div>
    <div class="flex flex-col items-center gap-2">
      <%= render Ui::LoadingIndicator::Component.new(type: :line_spinner) %>
      <span class="text-xs text-tertiary">line_spinner</span>
    </div>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::LoadingIndicator::Component.new(type: :line_simple)
render Ui::LoadingIndicator::Component.new(type: :line_spinner)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="flex flex-wrap items-end gap-8">
    <% %i[sm md lg xl].each do |size| %>
      <div class="flex flex-col items-center gap-2">
        <%= render Ui::LoadingIndicator::Component.new(size: size) %>
        <span class="text-xs text-tertiary"><%= size %></span>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::LoadingIndicator::Component.new(size: :sm)
render Ui::LoadingIndicator::Component.new(size: :lg)
render Ui::LoadingIndicator::Component.new(size: :xl)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Label" do %>
  <div class="flex flex-wrap items-end gap-8">
    <%= render Ui::LoadingIndicator::Component.new(size: :md, label: "Loading...") %>
    <%= render Ui::LoadingIndicator::Component.new(size: :lg, label: "Please wait") %>
    <%= render Ui::LoadingIndicator::Component.new(type: :line_spinner, size: :md, label: "Processing") %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::LoadingIndicator::Component.new(size: :md, label: "Loading...")
render Ui::LoadingIndicator::Component.new(type: :line_spinner, label: "Processing")' %>
