<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:lg</td><td class="px-6 py-3 text-tertiary">:sm, :md, :lg</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">title</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Heading text</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">description</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Description text</td></tr>
    </tbody>
  </table>
</div>

<%# Live Example %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Live Preview</h2>
  </div>
  <div class="p-6">
    <%= render Ui::EmptyState::Component.new(
      title: "No projects yet",
      description: "Get started by creating your first project."
    ) do |es| %>
      <% es.with_icon do %>
        <svg class="mx-auto size-12 text-fg-quaternary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" />
        </svg>
      <% end %>
      <% es.with_actions do %>
        <%= render Ui::Button::Component.new do %>Create Project<% end %>
      <% end %>
    <% end %>
  </div>
</div>

<%# Sizes %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Sizes</h2>
  </div>
  <div class="divide-y divide-secondary">
    <% %i[sm md lg].each do |size| %>
      <div class="p-6">
        <p class="mb-4 text-sm font-medium text-quaternary"><%= size.to_s.upcase %></p>
        <%= render Ui::EmptyState::Component.new(size: size, title: "No items", description: "Nothing to show here.") do |es| %>
          <% es.with_actions do %>
            <%= render Ui::Button::Component.new(size: :sm) do %>Add Item<% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
