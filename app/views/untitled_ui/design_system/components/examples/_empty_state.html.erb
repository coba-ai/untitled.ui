<%
  folder_icon = '<svg class="mx-auto size-12 text-fg-quaternary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 014.5 9.75h15A2.25 2.25 0 0121.75 12v.75m-8.69-6.44l-2.12-2.12a1.5 1.5 0 00-1.061-.44H4.5A2.25 2.25 0 002.25 6v12a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9a2.25 2.25 0 00-2.25-2.25h-5.379a1.5 1.5 0 01-1.06-.44z" /></svg>'
%>

<%= render "untitled_ui/design_system/shared/example_section", title: "Full Example" do %>
  <%= render Ui::EmptyState::Component.new(
    title: "No projects yet",
    description: "Get started by creating your first project."
  ) do |es| %>
    <% es.with_icon do %>
      <%= folder_icon.html_safe %>
    <% end %>
    <% es.with_actions do %>
      <%= render Ui::Button::Component.new { "Create Project" } %>
    <% end %>
  <% end %>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::EmptyState::Component.new(
  title: "No projects yet",
  description: "Get started by creating your first project."
) do |es|
  es.with_icon { "<svg ...>...</svg>" }
  es.with_actions do
    render Ui::Button::Component.new { "Create Project" }
  end
end' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="space-y-8">
    <% %i[sm md lg].each do |size| %>
      <div>
        <span class="mb-2 block text-xs font-medium text-tertiary"><%= size.to_s.upcase %></span>
        <%= render Ui::EmptyState::Component.new(size: size, title: "No items", description: "Nothing to show here.") do |es| %>
          <% es.with_actions do %>
            <%= render Ui::Button::Component.new(size: :sm) { "Add Item" } %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::EmptyState::Component.new(size: :sm, title: "No items", description: "Nothing here.") do |es|
  es.with_actions do
    render Ui::Button::Component.new(size: :sm) { "Add Item" }
  end
end' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Without Actions" do %>
  <%= render Ui::EmptyState::Component.new(
    title: "No results found",
    description: "Try adjusting your search or filter to find what you're looking for."
  ) do |es| %>
    <% es.with_icon do %>
      <svg class="mx-auto size-12 text-fg-quaternary" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
      </svg>
    <% end %>
  <% end %>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '# Omit es.with_actions to render without action buttons' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Without Icon" do %>
  <%= render Ui::EmptyState::Component.new(
    title: "No notifications",
    description: "You're all caught up! Check back later for new updates."
  ) do |es| %>
    <% es.with_actions do %>
      <%= render Ui::Button::Component.new(color: :secondary) { "Refresh" } %>
    <% end %>
  <% end %>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '# Omit es.with_icon to render without the icon' %>
