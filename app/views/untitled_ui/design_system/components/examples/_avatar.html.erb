<%= render "untitled_ui/design_system/shared/example_section", title: "All Sizes (with Initials)" do %>
  <div class="flex flex-wrap items-end gap-3">
    <% %i[xxs xs sm md lg xl].each do |size| %>
      <div class="flex flex-col items-center gap-1">
        <%= render Ui::Avatar::Component.new(size: size, initials: "AK") %>
        <span class="text-xs text-tertiary"><%= size %></span>
      </div>
    <% end %>
    <div class="flex flex-col items-center gap-1">
      <%= render Ui::Avatar::Component.new(size: :"2xl", initials: "AK") %>
      <span class="text-xs text-tertiary">2xl</span>
    </div>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Avatar::Component.new(size: :lg, initials: "AK")' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Image" do %>
  <div class="flex flex-wrap items-end gap-3">
    <% %i[xs sm md lg xl].each do |size| %>
      <%= render Ui::Avatar::Component.new(size: size, src: "https://i.pravatar.cc/150?img=1", alt: "User avatar") %>
    <% end %>
    <%= render Ui::Avatar::Component.new(size: :"2xl", src: "https://i.pravatar.cc/150?img=1", alt: "User avatar") %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Avatar::Component.new(src: "https://i.pravatar.cc/150?img=1", alt: "User")' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Status Indicator" do %>
  <div class="flex flex-wrap items-center gap-4">
    <%= render Ui::Avatar::Component.new(initials: "ON", status: :online) %>
    <%= render Ui::Avatar::Component.new(initials: "OF", status: :offline) %>
    <%= render Ui::Avatar::Component.new(src: "https://i.pravatar.cc/150?img=3", status: :online) %>
    <%= render Ui::Avatar::Component.new(src: "https://i.pravatar.cc/150?img=5", status: :offline) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Avatar::Component.new(initials: "ON", status: :online)
render Ui::Avatar::Component.new(src: "...", status: :offline)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Fallback (Placeholder)" do %>
  <div class="flex flex-wrap items-end gap-3">
    <% %i[sm md lg xl].each do |size| %>
      <%= render Ui::Avatar::Component.new(size: size) %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '# No src or initials renders a default user icon placeholder
render Ui::Avatar::Component.new(size: :lg)' %>
