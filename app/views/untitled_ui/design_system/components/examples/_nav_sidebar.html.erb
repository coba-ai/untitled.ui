  sidebar_items = [
    { label: "Dashboard", href: "/dashboard", icon: home_icon },
    { label: "Team", href: "/team", icon: users_icon },
    { divider: true },
    { label: "Analytics", href: "/analytics", icon: chart_icon }
  ]
%>

<%= render "untitled_ui/design_system/shared/example_section", title: "Simple Sidebar" do %>
  <div class="h-96 overflow-hidden rounded-lg ring-1 ring-secondary">
    <div class="flex h-full">
      <aside class="flex h-full w-72 flex-col justify-between overflow-auto border-r border-secondary bg-primary pt-6">
        <div class="px-5">
          <p class="text-lg font-bold text-primary">Untitled UI</p>
        </div>
        <%= render Ui::Navigation::List::Component.new(items: sidebar_items, active_url: "/dashboard") %>
        <div class="mt-auto px-4 py-6">
          <%= render Ui::Navigation::AccountCard::Component.new(name: "John Doe", email: "john@example.com") %>
        </div>
      </aside>
      <div class="flex-1 bg-secondary p-6">
        <p class="text-tertiary">Main content area</p>
      </div>
    </div>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Navigation::Sidebar::Component.new(
  type: :simple,
  items: [
    { label: "Dashboard", href: "/dashboard", icon: home_svg },
    { label: "Team", href: "/team", icon: users_svg },
    { divider: true },
    { label: "Analytics", href: "/analytics", icon: chart_svg }
  ],
  active_url: "/dashboard"
) do |sidebar|
  sidebar.with_logo { image_tag("logo.svg", class: "h-8") }
  sidebar.with_account_card do
    render Ui::Navigation::AccountCard::Component.new(
      name: "John Doe", email: "john@example.com"
    )
  end
end' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Available Types" do %>
  <div class="grid grid-cols-2 gap-4 md:grid-cols-3">
    <% %w[simple slim dual_tier section_dividers section_subheadings].each do |type| %>
      <div class="rounded-lg bg-secondary p-4 text-center">
        <p class="text-sm font-semibold text-primary"><%= type.humanize %></p>
        <p class="mt-1 text-xs text-tertiary">type: :<%= type %></p>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '# Simple - standard sidebar with nav list
render Ui::Navigation::Sidebar::Component.new(type: :simple, items: items)

# Slim - icon-only sidebar with hover secondary panel
render Ui::Navigation::Sidebar::Component.new(type: :slim, items: items)

# Dual Tier - full sidebar with hover secondary panel
render Ui::Navigation::Sidebar::Component.new(type: :dual_tier, items: items)

# Section Dividers - card-style sidebar with dividers
render Ui::Navigation::Sidebar::Component.new(type: :section_dividers, items: items)

# Section Subheadings - card-style with grouped items
render Ui::Navigation::Sidebar::Component.new(type: :section_subheadings, items: grouped_items)' %>
