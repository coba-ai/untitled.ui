<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">class</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Extra CSS classes for the popover</td></tr>
    </tbody>
  </table>
</div>

<%# Item Slots %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Item Params</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">label</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 text-tertiary">Item text (required)</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">href</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 text-tertiary">Link destination</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">disabled</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 text-tertiary">Disables item</td></tr>
    </tbody>
  </table>
</div>

<%# Live Example %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Live Preview</h2>
  </div>
  <div class="p-6">
    <%= render Ui::Dropdown::Component.new do |dropdown| %>
      <% dropdown.with_trigger do %>
        <%= render Ui::Button::Component.new(color: :secondary) do %>Options<% end %>
      <% end %>
      <% dropdown.with_item(label: "Edit") %>
      <% dropdown.with_item(label: "Duplicate") %>
      <% dropdown.with_item(label: "Archive") %>
      <% dropdown.with_item(label: "Delete", disabled: true) %>
    <% end %>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::Dropdown::Component.new do |dropdown| %&gt;
  &lt;% dropdown.with_trigger do %&gt;
    &lt;%= render Ui::Button::Component.new(color: :secondary) do %&gt;Options&lt;% end %&gt;
  &lt;% end %&gt;
  &lt;% dropdown.with_item(label: "Edit") %&gt;
  &lt;% dropdown.with_item(label: "Delete", disabled: true) %&gt;
&lt;% end %&gt;</code></pre>
  </div>
</div>
