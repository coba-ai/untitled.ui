<%= render "untitled_ui/design_system/shared/example_section", title: "Themes" do %>
  <div class="flex flex-wrap items-center gap-4">
    <% %i[light dark modern outline].each do |theme| %>
      <div class="flex flex-col items-center gap-2">
        <%= render Ui::FeaturedIcon::Component.new(theme: theme, color: :brand) do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
        <span class="text-xs text-tertiary"><%= theme %></span>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::FeaturedIcon::Component.new(theme: :light, color: :brand) do %>
  <svg ...>...</svg>
<%% end %>' %>

