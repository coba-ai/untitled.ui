<%# Props Table %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:sm</td><td class="px-6 py-3 text-tertiary">:sm, :md</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">label</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Label text</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">hint</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Help text below label</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">checked</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Checked state</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">indeterminate</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Indeterminate state</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">disabled</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Disables the checkbox</td></tr>
    </tbody>
  </table>
</div>

<%# Examples %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">States</h2>
  </div>
  <div class="space-y-4 p-6">
    <%= render Ui::Checkbox::Component.new(label: "Unchecked", hint: "This is a helper text") %>
    <%= render Ui::Checkbox::Component.new(label: "Checked", checked: true) %>
    <%= render Ui::Checkbox::Component.new(label: "Indeterminate", indeterminate: true) %>
    <%= render Ui::Checkbox::Component.new(label: "Disabled", disabled: true) %>
    <%= render Ui::Checkbox::Component.new(label: "Disabled Checked", checked: true, disabled: true) %>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::Checkbox::Component.new(label: "Accept terms", checked: false) %&gt;</code></pre>
  </div>
</div>

<%# Sizes %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Sizes</h2>
  </div>
  <div class="space-y-4 p-6">
    <%= render Ui::Checkbox::Component.new(size: :sm, label: "Small checkbox", checked: true) %>
    <%= render Ui::Checkbox::Component.new(size: :md, label: "Medium checkbox", checked: true) %>
  </div>
</div>
