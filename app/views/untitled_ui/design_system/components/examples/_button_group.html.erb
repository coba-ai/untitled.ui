<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">class</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Extra CSS classes</td></tr>
    </tbody>
  </table>
</div>

<%# Live Example %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Live Preview</h2>
  </div>
  <div class="p-6">
    <%= render Ui::ButtonGroup::Component.new do %>
      <%= render Ui::Button::Component.new(color: :secondary) do %>Day<% end %>
      <%= render Ui::Button::Component.new(color: :secondary) do %>Week<% end %>
      <%= render Ui::Button::Component.new(color: :secondary) do %>Month<% end %>
      <%= render Ui::Button::Component.new(color: :secondary) do %>Year<% end %>
    <% end %>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::ButtonGroup::Component.new do %&gt;
  &lt;%= render Ui::Button::Component.new(color: :secondary) do %&gt;Day&lt;% end %&gt;
  &lt;%= render Ui::Button::Component.new(color: :secondary) do %&gt;Week&lt;% end %&gt;
  &lt;%= render Ui::Button::Component.new(color: :secondary) do %&gt;Month&lt;% end %&gt;
&lt;% end %&gt;</code></pre>
  </div>
</div>
