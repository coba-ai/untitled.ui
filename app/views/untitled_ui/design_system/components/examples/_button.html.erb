<%
  plus_icon = '<svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" /></svg>'
  check_icon = '<svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>'
  arrow_icon = '<svg class="size-5" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" /></svg>'
%>

<%= render "untitled_ui/design_system/shared/example_section", title: "Color Variants" do %>
  <div class="flex flex-wrap items-center gap-3">
    <% %i[primary secondary tertiary link_gray link_color].each do |color| %>
      <%= render Ui::Button::Component.new(color: color) { color.to_s.titleize } %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(color: :primary) { "Click me" } %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Destructive Variants" do %>
  <div class="flex flex-wrap items-center gap-3">
    <% %i[primary_destructive secondary_destructive tertiary_destructive link_destructive].each do |color| %>
      <%= render Ui::Button::Component.new(color: color) { color.to_s.titleize } %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(color: :primary_destructive) { "Delete" } %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="flex flex-wrap items-end gap-3">
    <% %i[sm md lg xl].each do |size| %>
      <%= render Ui::Button::Component.new(size: size) { size.to_s.upcase } %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(size: :lg) { "Large" } %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Leading Icon" do %>
  <div class="flex flex-wrap items-center gap-3">
    <% %i[sm md lg xl].each do |size| %>
      <%= render Ui::Button::Component.new(size: size, icon_leading: plus_icon) { "Add Item" } %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(icon_leading: plus_svg) { "Add Item" } %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Trailing Icon" do %>
  <div class="flex flex-wrap items-center gap-3">
    <%= render Ui::Button::Component.new(icon_trailing: arrow_icon) { "Continue" } %>
    <%= render Ui::Button::Component.new(color: :secondary, icon_trailing: check_icon) { "Confirm" } %>
    <%= render Ui::Button::Component.new(color: :link_color, icon_trailing: arrow_icon) { "Learn more" } %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(icon_trailing: arrow_svg) { "Continue" } %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Icon Only" do %>
  <div class="flex flex-wrap items-center gap-3">
    <% %i[sm md lg xl].each do |size| %>
      <%= render Ui::Button::Component.new(size: size, icon_leading: plus_icon) %>
    <% end %>
    <%= render Ui::Button::Component.new(color: :secondary, icon_leading: plus_icon) %>
    <%= render Ui::Button::Component.new(color: :tertiary, icon_leading: plus_icon) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%# No block content = icon only button %>
<%%= render Ui::Button::Component.new(icon_leading: plus_svg) %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "States" do %>
  <div class="flex flex-wrap items-center gap-3">
    <%= render Ui::Button::Component.new { "Default" } %>
    <%= render Ui::Button::Component.new(disabled: true) { "Disabled" } %>
    <%= render Ui::Button::Component.new(loading: true) { "Loading..." } %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/example_section", title: "As Link" do %>
  <div class="flex flex-wrap items-center gap-3">
    <%= render Ui::Button::Component.new(href: "#") { "Link Button" } %>
    <%= render Ui::Button::Component.new(href: "#", color: :secondary) { "Secondary Link" } %>
    <%= render Ui::Button::Component.new(href: "#", disabled: true) { "Disabled Link" } %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::Button::Component.new(href: "/path") { "Navigate" } %>' %>
