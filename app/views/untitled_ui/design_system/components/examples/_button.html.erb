<%# Props Table %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:sm</td><td class="px-6 py-3 text-tertiary">:sm, :md, :lg, :xl</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">color</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:primary</td><td class="px-6 py-3 text-tertiary">:primary, :secondary, :tertiary, :link_gray, :link_color, :primary_destructive, :secondary_destructive, :tertiary_destructive, :link_destructive</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">tag</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">auto</td><td class="px-6 py-3 text-tertiary">:button or :a (auto-detected from href)</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">href</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">URL for link buttons</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">disabled</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Disables the button</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">loading</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Shows loading spinner</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">icon_leading</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">SVG content for leading icon</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">icon_trailing</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">SVG content for trailing icon</td></tr>
    </tbody>
  </table>
</div>

<%# Color Variants %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Color Variants</h2>
  </div>
  <div class="flex flex-wrap items-center gap-3 p-6">
    <%= render Ui::Button::Component.new(color: :primary) do %>Primary<% end %>
    <%= render Ui::Button::Component.new(color: :secondary) do %>Secondary<% end %>
    <%= render Ui::Button::Component.new(color: :tertiary) do %>Tertiary<% end %>
    <%= render Ui::Button::Component.new(color: :link_gray) do %>Link Gray<% end %>
    <%= render Ui::Button::Component.new(color: :link_color) do %>Link Color<% end %>
    <%= render Ui::Button::Component.new(color: :primary_destructive) do %>Destructive<% end %>
    <%= render Ui::Button::Component.new(color: :secondary_destructive) do %>Sec. Destructive<% end %>
    <%= render Ui::Button::Component.new(color: :tertiary_destructive) do %>Ter. Destructive<% end %>
    <%= render Ui::Button::Component.new(color: :link_destructive) do %>Link Destructive<% end %>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::Button::Component.new(color: :primary) do %&gt;Click me&lt;% end %&gt;</code></pre>
  </div>
</div>

<%# Size Variants %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Sizes</h2>
  </div>
  <div class="flex flex-wrap items-center gap-3 p-6">
    <%= render Ui::Button::Component.new(size: :sm) do %>Small<% end %>
    <%= render Ui::Button::Component.new(size: :md) do %>Medium<% end %>
    <%= render Ui::Button::Component.new(size: :lg) do %>Large<% end %>
    <%= render Ui::Button::Component.new(size: :xl) do %>Extra Large<% end %>
  </div>
</div>

<%# States %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">States</h2>
  </div>
  <div class="flex flex-wrap items-center gap-3 p-6">
    <%= render Ui::Button::Component.new do %>Default<% end %>
    <%= render Ui::Button::Component.new(disabled: true) do %>Disabled<% end %>
    <%= render Ui::Button::Component.new(loading: true) do %>Loading<% end %>
    <%= render Ui::Button::Component.new(href: "#") do %>Link Button<% end %>
  </div>
</div>
