  <div class="space-y-4">
    <%= render Ui::Toggle::Component.new(label: "Dark mode") %>
    <%= render Ui::Toggle::Component.new(label: "Auto-save", checked: true) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Toggle::Component.new(label: "Dark mode") %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Label & Hint" do %>
