<%= render "untitled_ui/design_system/shared/example_section", title: "States" do %>
  <div class="space-y-4">
    <%= render Ui::Toggle::Component.new(label: "Off") %>
    <%= render Ui::Toggle::Component.new(label: "On", checked: true) %>
    <%= render Ui::Toggle::Component.new(label: "Disabled off", disabled: true) %>
    <%= render Ui::Toggle::Component.new(label: "Disabled on", checked: true, disabled: true) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Toggle::Component.new(label: "Off")
render Ui::Toggle::Component.new(label: "On", checked: true)
render Ui::Toggle::Component.new(label: "Disabled", disabled: true)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="space-y-4">
    <%= render Ui::Toggle::Component.new(size: :sm, label: "Small toggle", checked: true) %>
    <%= render Ui::Toggle::Component.new(size: :md, label: "Medium toggle", checked: true) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Toggle::Component.new(size: :sm, label: "Small")
render Ui::Toggle::Component.new(size: :md, label: "Medium")' %>

