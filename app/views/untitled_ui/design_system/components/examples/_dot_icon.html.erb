<%= render "untitled_ui/design_system/shared/example_section", title: "Colors" do %>
  <div class="flex flex-wrap items-center gap-4">
    <% { brand: "Brand", success: "Success", error: "Error", warning: "Warning", gray: "Gray" }.each do |color, label| %>
      <div class="flex flex-col items-center gap-1">
        <%= render Ui::DotIcon::Component.new(color: "text-utility-#{color}-500") %>
        <span class="text-xs text-tertiary"><%= label %></span>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::DotIcon::Component.new(color: "text-utility-brand-500")
render Ui::DotIcon::Component.new(color: "text-utility-success-500")
render Ui::DotIcon::Component.new(color: "text-utility-error-500")' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="flex flex-wrap items-center gap-4">
    <% %i[sm md lg].each do |size| %>
      <div class="flex flex-col items-center gap-1">
        <%= render Ui::DotIcon::Component.new(size: size, color: "text-utility-brand-500") %>
        <span class="text-xs text-tertiary"><%= size %></span>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::DotIcon::Component.new(size: :sm, color: "text-utility-brand-500")
render Ui::DotIcon::Component.new(size: :md, color: "text-utility-brand-500")
render Ui::DotIcon::Component.new(size: :lg, color: "text-utility-brand-500")' %>
