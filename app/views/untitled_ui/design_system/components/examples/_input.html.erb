<%# Props Table %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:sm</td><td class="px-6 py-3 text-tertiary">:sm, :md</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">label</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Label text</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">hint</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Hint text below input</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">placeholder</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Placeholder text</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">required</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Shows required asterisk</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">invalid</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Shows error state</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">disabled</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Disables the input</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">name</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">Input name attribute</td></tr>
    </tbody>
  </table>
</div>

<%# Variants %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Variants</h2>
  </div>
  <div class="space-y-6 p-6">
    <div class="max-w-sm">
      <%= render Ui::Input::Component.new(label: "Email", placeholder: "you@example.com", hint: "We'll never share your email.") %>
    </div>
    <div class="max-w-sm">
      <%= render Ui::Input::Component.new(label: "Required Field", placeholder: "Enter value...", required: true) %>
    </div>
    <div class="max-w-sm">
      <%= render Ui::Input::Component.new(label: "Invalid Input", placeholder: "Wrong value", invalid: true, hint: "This field is required.") %>
    </div>
    <div class="max-w-sm">
      <%= render Ui::Input::Component.new(label: "Disabled", placeholder: "Cannot edit", disabled: true) %>
    </div>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::Input::Component.new(label: "Email", placeholder: "you@example.com", hint: "Help text") %&gt;</code></pre>
  </div>
</div>
