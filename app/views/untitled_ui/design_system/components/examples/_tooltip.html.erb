<%= render "untitled_ui/design_system/shared/example_section", title: "Placements" do %>
  <div class="flex flex-wrap items-center justify-center gap-6 py-6">
    <% %i[top bottom left right].each do |placement| %>
      <%= render Ui::Tooltip::Component.new(title: "Tooltip #{placement}", placement: placement) do |tooltip| %>
        <% tooltip.with_trigger do %>
          <%= render(Ui::Button::Component.new(color: :secondary)) { placement.to_s.capitalize } %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Tooltip::Component.new(title: "Tooltip top", placement: :top) do |tooltip|
  tooltip.with_trigger do
    render(Ui::Button::Component.new(color: :secondary)) { "Hover me" }
  end
end' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Description" do %>
  <div class="flex items-center justify-center py-6">
    <%= render Ui::Tooltip::Component.new(title: "Help", description: "This is a longer description that provides more context about the feature.") do |tooltip| %>
      <% tooltip.with_trigger do %>
        <%= render(Ui::Button::Component.new(color: :secondary)) { "Hover me" } %>
      <% end %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Tooltip::Component.new(title: "Help", description: "More context about the feature.") do |tooltip|
  tooltip.with_trigger do
    render(Ui::Button::Component.new(color: :secondary)) { "Hover me" }
  end
end' %>
