<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:md</td><td class="px-6 py-3 text-tertiary">:sm, :md, :lg</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">theme</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:light</td><td class="px-6 py-3 text-tertiary">:light, :dark</td></tr>
    </tbody>
  </table>
</div>

<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Sizes &amp; Themes</h2>
  </div>
  <div class="flex flex-wrap items-center gap-4 p-6">
    <%= render Ui::CloseButton::Component.new(size: :sm) %>
    <%= render Ui::CloseButton::Component.new(size: :md) %>
    <%= render Ui::CloseButton::Component.new(size: :lg) %>
  </div>
  <div class="flex flex-wrap items-center gap-4 bg-neutral-800 p-6">
    <%= render Ui::CloseButton::Component.new(size: :sm, theme: :dark) %>
    <%= render Ui::CloseButton::Component.new(size: :md, theme: :dark) %>
    <%= render Ui::CloseButton::Component.new(size: :lg, theme: :dark) %>
  </div>
</div>
