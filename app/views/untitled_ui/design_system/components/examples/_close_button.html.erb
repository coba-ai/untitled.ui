<%= render "untitled_ui/design_system/shared/example_section", title: "Sizes" do %>
  <div class="flex flex-wrap items-center gap-4">
    <% %i[xs sm md lg].each do |size| %>
      <div class="flex flex-col items-center gap-1">
        <%= render Ui::CloseButton::Component.new(size: size) %>
        <span class="text-xs text-tertiary"><%= size %></span>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::CloseButton::Component.new(size: :xs)
render Ui::CloseButton::Component.new(size: :sm)
render Ui::CloseButton::Component.new(size: :md)
render Ui::CloseButton::Component.new(size: :lg)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Light Theme" do %>
  <div class="flex flex-wrap items-center gap-4">
    <% %i[xs sm md lg].each do |size| %>
      <%= render Ui::CloseButton::Component.new(size: size, theme: :light) %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::CloseButton::Component.new(size: :md, theme: :light)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Dark Theme" do %>
  <div class="flex flex-wrap items-center gap-4 rounded-lg bg-primary-solid p-6">
    <% %i[xs sm md lg].each do |size| %>
      <%= render Ui::CloseButton::Component.new(size: size, theme: :dark) %>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::CloseButton::Component.new(size: :md, theme: :dark)' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Custom Label" do %>
  <div class="flex flex-wrap items-center gap-4">
    <%= render Ui::CloseButton::Component.new(label: "Dismiss notification") %>
    <%= render Ui::CloseButton::Component.new(label: "Remove item") %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::CloseButton::Component.new(label: "Dismiss notification")' %>
