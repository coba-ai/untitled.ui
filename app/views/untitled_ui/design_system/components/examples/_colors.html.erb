<%# Primary Green Scale %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Primary Green Scale</h2>
    <p class="mt-1 text-sm text-tertiary">Main brand color scale. Use <code class="text-xs font-mono bg-secondary px-1 py-0.5 rounded">primary-*</code> or <code class="text-xs font-mono bg-secondary px-1 py-0.5 rounded">brand-*</code> tokens.</p>
  </div>
  <div class="grid grid-cols-5 gap-0 lg:grid-cols-10">
    <% [
      { shade: "50", hex: "#F3F8F6", text: "dark" },
      { shade: "100", hex: "#CFF3E8", text: "dark" },
      { shade: "200", hex: "#9EE7D1", text: "dark" },
      { shade: "300", hex: "#6EDAB9", text: "dark" },
      { shade: "400", hex: "#3DCEA2", text: "dark" },
      { shade: "500", hex: "#0DC28B", text: "light" },
      { shade: "600", hex: "#03A372", text: "light" },
      { shade: "700", hex: "#028A5E", text: "light" },
      { shade: "800", hex: "#02734D", text: "light" },
      { shade: "900", hex: "#015C3E", text: "light" }
    ].each do |c| %>
      <div class="flex flex-col items-center p-3" style="background-color: <%= c[:hex] %>;">
        <span class="text-xs font-semibold <%= c[:text] == 'light' ? 'text-white' : 'text-gray-900' %>"><%= c[:shade] %></span>
        <span class="mt-1 text-[10px] font-mono <%= c[:text] == 'light' ? 'text-white/80' : 'text-gray-600' %>"><%= c[:hex] %></span>
      </div>
    <% end %>
  </div>
</div>

