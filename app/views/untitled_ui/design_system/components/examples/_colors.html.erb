<%# Dark Mode Palette %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Dark Mode Palette</h2>
    <p class="mt-1 text-sm text-tertiary">Clean neutral darks with brand purple used as accent. Use <code class="text-xs font-mono bg-secondary px-1 py-0.5 rounded">dark-*</code> tokens.</p>
  </div>
  <div class="grid grid-cols-2 gap-0 lg:grid-cols-6">
    <% [
      { name: "background", hex: "#0C0E12", desc: "Page background" },
      { name: "secondary", hex: "#13161B", desc: "Recessed areas" },
      { name: "surface", hex: "#22262F", desc: "Cards, panels" },
      { name: "surface-raised", hex: "#373A41", desc: "Elevated surfaces" },
      { name: "border-subtle", hex: "#373A41", desc: "Subtle dividers" },
      { name: "border", hex: "#61656C", desc: "Borders, rings" }
    ].each do |c| %>
      <div class="flex flex-col items-center p-4" style="background-color: <%= c[:hex] %>;">
        <span class="text-xs font-semibold text-white"><%= c[:name] %></span>
        <span class="mt-1 text-[10px] font-mono text-white/60"><%= c[:hex] %></span>
        <span class="mt-0.5 text-[10px] text-white/40"><%= c[:desc] %></span>
      </div>
    <% end %>
  </div>
  <div class="grid grid-cols-2 gap-0 lg:grid-cols-4">
    <% [
      { name: "foreground", hex: "#FAFAFA", desc: "Primary text" },
      { name: "muted", hex: "#94979C", desc: "Secondary text" },
      { name: "accent", hex: "#B692F6", desc: "Links, active states" },
      { name: "accent-hover", hex: "#D6BBFB", desc: "Hover state" }
    ].each do |c| %>
      <div class="flex flex-col items-center p-4" style="background-color: #18181B;">
        <span class="text-xs font-semibold" style="color: <%= c[:hex] %>;"><%= c[:name] %></span>
        <span class="mt-1 text-[10px] font-mono" style="color: <%= c[:hex] %>; opacity: 0.7;"><%= c[:hex] %></span>
        <span class="mt-0.5 text-[10px] text-white/40"><%= c[:desc] %></span>
      </div>
    <% end %>
  </div>
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code><%# Dark mode tokens %>
dark-background     <%# #0C0E12 — near-black %>
dark-surface        <%# #22262F — card/panel fill %>
dark-surface-raised <%# #373A41 — elevated panels %>
dark-border         <%# #61656C — dividers %>
dark-foreground     <%# #FAFAFA — primary text (clean white) %>
dark-muted          <%# #94979C — secondary text %>
dark-accent         <%# #B692F6 — interactive brand tint %>
dark-primary        <%# #9E77ED — brand in dark context %></code></pre>
  </div>
</div>

