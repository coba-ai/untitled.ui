<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">type</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:button_brand</td><td class="px-6 py-3 text-tertiary">:button_brand, :button_gray, :underline</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">size</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">:sm</td><td class="px-6 py-3 text-tertiary">:sm, :md</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">full_width</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Stretch tabs to full width</td></tr>
    </tbody>
  </table>
</div>

<%# Types %>
<% %i[button_brand button_gray underline].each do |type| %>
  <div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
    <div class="border-b border-secondary px-6 py-4">
      <h2 class="text-lg font-semibold text-primary"><%= type.to_s.titleize %></h2>
    </div>
    <div class="p-6">
      <%= render Ui::Tabs::Component.new(type: type) do |tabs| %>
        <% tabs.with_tab(id: "tab1", label: "Overview", active: true) %>
        <% tabs.with_tab(id: "tab2", label: "Features") %>
        <% tabs.with_tab(id: "tab3", label: "Settings") %>
        <% tabs.with_panel do %><div class="mt-4 text-sm text-tertiary">Overview content</div><% end %>
        <% tabs.with_panel do %><div class="mt-4 text-sm text-tertiary">Features content</div><% end %>
        <% tabs.with_panel do %><div class="mt-4 text-sm text-tertiary">Settings content</div><% end %>
      <% end %>
    </div>
  </div>
<% end %>

<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-t border-secondary bg-secondary/50 px-6 py-4">
    <pre class="text-xs text-tertiary"><code>&lt;%= render Ui::Tabs::Component.new(type: :button_brand) do |tabs| %&gt;
  &lt;% tabs.with_tab(id: "t1", label: "Tab 1", active: true) %&gt;
  &lt;% tabs.with_tab(id: "t2", label: "Tab 2") %&gt;
  &lt;% tabs.with_panel do %&gt;Panel 1&lt;% end %&gt;
  &lt;% tabs.with_panel do %&gt;Panel 2&lt;% end %&gt;
&lt;% end %&gt;</code></pre>
  </div>
</div>
