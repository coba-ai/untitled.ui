<%
  items = [
    { label: "Dashboard", href: "/dashboard" },
    { label: "Projects", href: "/projects" },
    { label: "Tasks", href: "/tasks" },
    { label: "Reports", href: "/reports" }
  ]

  sub_items = [
    { label: "Overview", href: "/dashboard/overview" },
    { label: "Analytics", href: "/dashboard/analytics" },
    { label: "Reports", href: "/dashboard/reports" }
  ]
%>

<%= render "untitled_ui/design_system/shared/example_section", title: "Header Navigation" do %>
  <div class="overflow-hidden rounded-lg ring-1 ring-secondary">
    <div class="flex h-16 w-full items-center justify-center border-b border-secondary bg-primary md:h-18">
      <div class="flex w-full justify-between pr-3 pl-4 md:px-8">
        <div class="flex flex-1 items-center gap-4">
          <span class="text-lg font-bold text-primary">Untitled UI</span>
          <nav>
            <ul class="flex items-center gap-0.5">
              <% items.each do |item| %>
                <li class="py-0.5">
                  <%= render(Ui::Navigation::Item::Component.new(type: :link, href: item[:href], current: item[:href] == "/dashboard")) { item[:label] } %>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
        <div class="flex items-center gap-3">
          <%= render Ui::Avatar::Component.new(size: :md, alt: "User") %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Navigation::Header::Component.new(
  items: [
    { label: "Dashboard", href: "/dashboard" },
    { label: "Projects", href: "/projects" }
  ],
  active_url: "/dashboard"
) do |header|
  header.with_logo { image_tag("logo.svg", class: "h-8") }
  header.with_avatar { render Ui::Avatar::Component.new(size: :md) }
end' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "With Secondary Navigation" do %>
  <div class="overflow-hidden rounded-lg ring-1 ring-secondary">
    <div class="flex h-16 w-full items-center justify-center border-b border-secondary bg-primary md:h-18">
      <div class="flex w-full justify-between px-8">
        <div class="flex flex-1 items-center gap-4">
          <span class="text-lg font-bold text-primary">Untitled UI</span>
          <nav>
            <ul class="flex items-center gap-0.5">
              <% items.each do |item| %>
                <li class="py-0.5">
                  <%= render(Ui::Navigation::Item::Component.new(type: :link, href: item[:href], current: item[:href] == "/dashboard")) { item[:label] } %>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
      </div>
    </div>
    <div class="flex h-12 w-full items-center border-b border-secondary bg-primary px-8">
      <nav>
        <ul class="flex items-center gap-0.5">
          <% sub_items.each do |item| %>
            <li class="py-0.5">
              <%= render(Ui::Navigation::Item::Component.new(type: :link, href: item[:href], current: item[:href] == "/dashboard/overview")) { item[:label] } %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: 'render Ui::Navigation::Header::Component.new(
  items: items,
  sub_items: [
    { label: "Overview", href: "/dashboard/overview" },
    { label: "Analytics", href: "/dashboard/analytics" }
  ],
  active_url: "/dashboard"
)' %>
