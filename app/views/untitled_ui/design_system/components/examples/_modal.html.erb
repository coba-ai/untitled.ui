<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">open</td><td class="px-6 py-3 text-tertiary">Boolean</td><td class="px-6 py-3 font-mono text-xs">false</td><td class="px-6 py-3 text-tertiary">Initially open</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">id</td><td class="px-6 py-3 text-tertiary">String</td><td class="px-6 py-3 font-mono text-xs">auto</td><td class="px-6 py-3 text-tertiary">Dialog element ID</td></tr>
    </tbody>
  </table>
</div>

<%# Slots %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Slots</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Slot</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">trigger</td><td class="px-6 py-3 text-tertiary">renders_one</td><td class="px-6 py-3 text-tertiary">Button that opens the modal</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">header</td><td class="px-6 py-3 text-tertiary">renders_one</td><td class="px-6 py-3 text-tertiary">Header content with close button</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">footer</td><td class="px-6 py-3 text-tertiary">renders_one</td><td class="px-6 py-3 text-tertiary">Footer with action buttons</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">content</td><td class="px-6 py-3 text-tertiary">block</td><td class="px-6 py-3 text-tertiary">Main modal body content</td></tr>
    </tbody>
  </table>
</div>

<%# Live Example %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Live Preview</h2>
  </div>
  <div class="p-6">
    <%= render Ui::Modal::Component.new(id: "ds-modal-example") do |modal| %>
      <% modal.with_trigger do %>
        <%= render Ui::Button::Component.new do %>Open Modal<% end %>
      <% end %>
      <% modal.with_header do %>
        <h3 class="text-lg font-semibold text-primary">Modal Title</h3>
        <p class="text-sm text-tertiary">This is a description of the modal content.</p>
      <% end %>
      <p class="text-sm text-tertiary">This is the body content of the modal. You can put any content here including forms, text, or other components.</p>
      <% modal.with_footer do %>
        <div class="flex justify-end gap-3">
          <%= render Ui::Button::Component.new(color: :secondary) do %>Cancel<% end %>
          <%= render Ui::Button::Component.new do %>Confirm<% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
