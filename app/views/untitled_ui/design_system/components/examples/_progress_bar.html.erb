<%= render "untitled_ui/design_system/shared/example_section", title: "Default (No Label)" do %>
  <div class="max-w-md">
    <%= render Ui::ProgressBar::Component.new(value: 40) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::ProgressBar::Component.new(value: 40) %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Label Right" do %>
  <div class="max-w-md">
    <%= render Ui::ProgressBar::Component.new(value: 65, label_position: :right) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::ProgressBar::Component.new(value: 65, label_position: :right) %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Label Bottom" do %>
  <div class="max-w-md">
    <%= render Ui::ProgressBar::Component.new(value: 85, label_position: :bottom) %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::ProgressBar::Component.new(value: 85, label_position: :bottom) %>' %>

<%= render "untitled_ui/design_system/shared/example_section", title: "Different Values" do %>
  <div class="max-w-md space-y-4">
    <% [0, 25, 50, 75, 100].each do |val| %>
      <div>
        <span class="mb-1 block text-xs text-tertiary"><%= val %>%</span>
        <%= render Ui::ProgressBar::Component.new(value: val, label_position: :right) %>
      </div>
    <% end %>
  </div>
<% end %>

<%= render "untitled_ui/design_system/shared/code_block", code: '<%%= render Ui::ProgressBar::Component.new(value: 0, label_position: :right) %>
<%%= render Ui::ProgressBar::Component.new(value: 50, label_position: :right) %>
<%%= render Ui::ProgressBar::Component.new(value: 100, label_position: :right) %>' %>
