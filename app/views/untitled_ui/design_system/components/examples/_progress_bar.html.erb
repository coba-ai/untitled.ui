<%# Props %>
<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Props</h2>
  </div>
  <table class="w-full text-sm">
    <thead class="bg-secondary">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Param</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Type</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Default</th>
        <th class="px-6 py-3 text-left text-xs font-semibold text-quaternary">Description</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-secondary">
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">value</td><td class="px-6 py-3 text-tertiary">Numeric</td><td class="px-6 py-3 font-mono text-xs">0</td><td class="px-6 py-3 text-tertiary">Current value</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">min</td><td class="px-6 py-3 text-tertiary">Numeric</td><td class="px-6 py-3 font-mono text-xs">0</td><td class="px-6 py-3 text-tertiary">Minimum value</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">max</td><td class="px-6 py-3 text-tertiary">Numeric</td><td class="px-6 py-3 font-mono text-xs">100</td><td class="px-6 py-3 text-tertiary">Maximum value</td></tr>
      <tr><td class="px-6 py-3 font-mono text-xs text-brand-secondary">label_position</td><td class="px-6 py-3 text-tertiary">Symbol</td><td class="px-6 py-3 font-mono text-xs">nil</td><td class="px-6 py-3 text-tertiary">:right, :bottom, or nil</td></tr>
    </tbody>
  </table>
</div>

<div class="mb-8 overflow-hidden rounded-xl bg-primary shadow-xs ring-1 ring-secondary">
  <div class="border-b border-secondary px-6 py-4">
    <h2 class="text-lg font-semibold text-primary">Examples</h2>
  </div>
  <div class="space-y-6 p-6">
    <div class="max-w-md">
      <p class="mb-2 text-sm font-medium text-secondary">No label</p>
      <%= render Ui::ProgressBar::Component.new(value: 40) %>
    </div>
    <div class="max-w-md">
      <p class="mb-2 text-sm font-medium text-secondary">Label right</p>
      <%= render Ui::ProgressBar::Component.new(value: 65, label_position: :right) %>
    </div>
    <div class="max-w-md">
      <p class="mb-2 text-sm font-medium text-secondary">Label bottom</p>
      <%= render Ui::ProgressBar::Component.new(value: 85, label_position: :bottom) %>
    </div>
  </div>
</div>
