<div class="max-w-4xl">
  <%# Header %>
  <div class="mb-8">
    <div class="mb-2 flex items-center gap-2">
      <%= link_to "Components", untitled_ui.design_system_components_path, class: "text-sm text-tertiary hover:text-secondary" %>
      <span class="text-sm text-quaternary">/</span>
      <span class="text-sm text-secondary font-medium"><%= @component[:name] %></span>
    </div>
    <h1 class="text-display-sm font-semibold text-primary"><%= @component[:name] %></h1>
    <p class="mt-2 text-md text-tertiary"><%= @component[:description] %></p>
    <span class="mt-3 inline-block rounded-md bg-secondary px-2.5 py-1 text-xs font-medium text-tertiary ring-1 ring-secondary ring-inset"><%= @component[:category] %></span>
  </div>

  <%# Render per-component partial %>
  <%= render partial: "untitled_ui/design_system/components/examples/#{@component[:id]}" %>
</div>
